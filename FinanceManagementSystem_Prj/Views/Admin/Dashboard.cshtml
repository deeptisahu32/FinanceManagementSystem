@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-dashboard">

    <div class="admin-header">
        <h1>Welcome, Admin 👋</h1>
        <p>Finance Management System – Control Panel</p>
    </div>

    <div class="stats-grid">

        <div class="stat-card blue">
            <h3>Total Users</h3>
            <p>@ViewBag.TotalUsers</p>
        </div>

        <div class="stat-card orange">
            <h3>Pending Users</h3>
            <p>@ViewBag.PendingUsers</p>
            <a href="@Url.Action("PendingUsers","Admin")">Review</a>
        </div>

        <div class="stat-card purple">
            <h3>Pending EMI Cards</h3>
            <p>@ViewBag.PendingCards</p>
            <a href="@Url.Action("PendingApplications","Admin")">Review</a>
        </div>

        <div class="stat-card green">
            <h3>Active EMI Cards</h3>
            <p>@ViewBag.ActiveCards</p>
        </div>

    </div>

    <div class="quick-actions">
        <h2>Quick Actions</h2>

        <div class="action-grid">
            <a href="@Url.Action("PendingUsers","Admin")" class="action-card">
                👤 Approve Users
            </a>

            <a href="@Url.Action("PendingApplications","Admin")" class="action-card">
                💳 Approve EMI Cards
            </a>
            <a href="@Url.Action("Products","Admin")" class="action-card">
                📦 Manage Products
            </a>

            <a href="@Url.Action("Orders","Admin")" class="action-card">
                📊 View Orders
            </a>
        </div>
    </div>

</div>

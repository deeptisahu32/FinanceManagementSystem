
@model FinanceManagementSystem_Prj.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" >
    <div class="card shadow-lg p-4" style="max-width:700px;margin-left:230px">
        <h3 class="mb-4">✏️ Edit Product</h3>

        @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ProductId)

            <!-- PRODUCT NAME -->
            <div class="mb-3">
                <label class="form-label">Product Name</label>
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Product name" })
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-3">
                <label class="form-label">Description</label>
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
            </div>

            <!-- PRICE -->
            <div class="mb-3">
                <label class="form-label">Price (₹)</label>
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            </div>

            <!-- CURRENT IMAGE -->
            <div class="mb-3">
                <label class="form-label">Current Image</label><br />
                <img src="~/Content/ProductImages/@Model.ImageUrl"
                     style="width:150px;height:150px;object-fit:cover;border-radius:10px;border:1px solid #ddd"
                     onerror="this.src='/Content/no-image.png'" />
            </div>

            <!-- UPLOAD NEW IMAGE -->
            <div class="mb-4">
                <label class="form-label">Replace Image (optional)</label>
                <input type="file" name="ProductImage" class="form-control" />
                <small class="text-muted">Leave empty to keep existing image</small>
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
            </div>

            <!-- ACTION BUTTONS -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    💾 Update Product
                </button>

                <a href="@Url.Action("Products","Admin")" class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        }
    </div>
</div>




@model FinanceManagementSystem_Prj.Models.Product

@{
    ViewBag.Title = "Add Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4" style="max-width: 850px; margin-left: 215px">
        <h3 class="mb-4">➕ Add New Product</h3>

        @using (Html.BeginForm(
            "AddProduct",
            "Admin",
            FormMethod.Post,
            new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <!-- PRODUCT NAME -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Product Name</label>
                @Html.TextBoxFor(m => m.ProductName, new
                {
                    @class = "form-control",
                    placeholder = "Enter product name"
                })
                @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>
                @Html.TextAreaFor(m => m.Description, new
                {
                    @class = "form-control",
                    rows = 4,
                    placeholder = "Product description"
                })
            </div>

            <!-- PRICE -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Price (₹)</label>
                @Html.TextBoxFor(m => m.Price, new
                {
                    @class = "form-control",
                    placeholder = "Enter price"
                })
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>

            <!-- IMAGE UPLOAD -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Product Image</label>
                <input type="file"
                       name="ProductImage"
                       class="form-control"
                       accept="image/*"
                       onchange="previewImage(this)" />

                <!-- IMAGE PREVIEW -->
                <div class="mt-3">
                    <img id="imagePreview"
                         src="/Content/no-image.png"
                         style="width:160px;height:160px;
                                object-fit:cover;
                                border-radius:10px;
                                border:1px solid #ddd;" />
                </div>

            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Category</label>
                @Html.TextBoxFor(m => m.Category, new
                {
                    @class = "form-control",
                    placeholder = "Enter Category"
                })
                @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
            </div>
            <!-- ACTION BUTTONS -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success px-4">
                    ➕ Add Product
                </button>

                <a href="@Url.Action("Products","Admin")"
                   class="btn btn-secondary px-4">
                    Cancel
                </a>
            </div>
        }
    </div>
</div>

<!-- IMAGE PREVIEW SCRIPT -->
<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("imagePreview").src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
